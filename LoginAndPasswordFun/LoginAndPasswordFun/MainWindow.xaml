        <Button x:Name="logOutBtn" Content="LogOut" HorizontalAlignment="Left" Margin="274,200,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="usrNameTxtBlock" HorizontalAlignment="Left" Margin="112,108,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Height="23" Width="86"/>
        <TextBlock x:Name="passWdTb" HorizontalAlignment="Left" Margin="112,153,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Height="18" Width="60"/>
        <TextBlock x:Name="workingTB" Visibility="Hidden" HorizontalAlignment="Left" Margin="122,284,0,0" TextWrapping="Wrap" Text="Logged in" VerticalAlignment="Top" Height="44" Width="328"/>

    </Grid>
</Window>
