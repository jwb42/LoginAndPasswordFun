        <TextBox x:Name="usernameTb" HorizontalAlignment="Left" Height="23" Margin="220,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="titleTB" HorizontalAlignment="Left" Margin="143,38,0,0" TextWrapping="Wrap" Text="Auth Ex" VerticalAlignment="Top" Height="30" Width="238" FontSize="26.667"/>
